  {%- for block in section.blocks -%}
    {%- assign _block = block.settings -%}
    {%- assign block_archive = _block.item -%}

      <div id="block-{{ block.id }}" class="random-img">
      {{ block_archive | img_url: 'master' | img_tag: block_archive.alt }}
      </div>
  {%- endfor -%}
{% schema %}
{
  "name": "RANDMON",
  "blocks": [
    {
      "type": "logo",
      "name": "item",

      "settings": [
        {
          "type": "image_picker",
          "id": "item",
          "label": "Image"
        },
		{
          "type": "range",
          "id": "height",
          "label": "Image Height",
		  "min": 50,
          "max": 100,
          "step": 5,
          "default": 75,
		  "unit": "%"
        }
      ]
    }
  ]
}
{% endschema %}
