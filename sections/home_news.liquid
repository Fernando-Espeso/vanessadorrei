  {%- for block in section.blocks -%}
    {%- assign _block = block.settings -%}
    {%- assign block_archive = _block.item -%}

      <div id="block-{{ block.id }}" class="random-img">
      {{ block_archive | img_url: 'master' | img_tag: block_archive.alt }}
      </div>
  {%- endfor -%}
{% schema %}
{
  "name": "Hero",
  "blocks": [
    {
      "type": "logo",
      "name": "hero",

      "settings": [
        {
          "type": "image_picker",
          "id": "item",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
