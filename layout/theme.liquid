<!DOCTYPE html>
<!--

{% echo shop.name %}
Design by Matto studio

{{ 'now' | date: "%Y" }}

-->
<html lang="{{ shop.locale }}">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
  {%- if template.name != "index" and template.name != "cart" -%}
  	<title>{{ shop.name }} — {{ page_title }}</title>
  {%- elsif template.name == "cart" -%}
  	<title>{{ shop.name }} — {% if cart.item_count == 0 %}Empty {% endif %}Cart</title>
  {%- else -%}
  	<title>{{ shop.name }}</title>
  {%- endif -%}
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no, shrink-to-fit=no">
  <link rel="canonical" href="{{ canonical_url }}" />
  {%- if settings.favicon.size > 0 -%}
<link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}">  {%- endif -%}
  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}" />
  {%- else -%}
  	<meta name="description" content="{{ shop.description }}" />
  {%- endif -%}
  {%- if template contains '404' or template contains 'cart' or template contains 'search' -%}
	<meta name="robots" content="noindex">
  {%- endif -%}
  {{ 'style.css'  | asset_url | stylesheet_tag }}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
  {{ 'current-device-browser.min.js' | asset_url | script_tag }}
  {%- if template == 'product' -%}
  {{ 'option_selection.js' | shopify_asset_url | script_tag }}
  {%- endif -%}
  {{ 'global.js' | asset_url | script_tag }}
  {%- if template == "cart" and cart.item_count > 0 -%}
  {{ 'global-cart.js' | asset_url | script_tag }}
  {%- endif -%}
  {%- if template == 'product' -%}
  {{ '//cdnjs.cloudflare.com/ajax/libs/jquery.lazyload/1.9.1/jquery.lazyload.min.js' | script_tag }}
  <link rel="preload" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.0/js/swiper.min.js"></script>


  {%- endif -%}
  {{ content_for_header }}
</head>

<body class="template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}
             {%- if template.suffix.size > 0 -%}
             template-{{ template.suffix }}
             {% endif %}
             {%- if template == 'cart' and cart.item_count == 0 -%}
             template-cart-empty
             {%- endif -%}">

  <div id="loader"
       style="position: fixed;

              top: 0;
              left: 0;
              width: 100vw;
              height: 100%;
              background-color: white;
              z-index: 99999999;">
	<script type="text/javascript">
      setTimeout(function(){
		$("#loader").delay(10).fadeOut(function(){
          $(this).remove();
		});
      }, 500);
    </script>
  </div>
  <!--Header-->
  <header>
  {% if template == 'index'%}<div class="back-logo"><img src="{{ 'logo.png' | asset_url }}"></div>{% endif %}
	<div class="menu">
      	<div><a href="../collections/all" {% if template == 'collection' %}class="active" {% endif %} >Store</a></div>
        <div class="vanessa"><a href="../index" {% if template == 'index' %}class="active" {% endif %} >DORREI</a></div>
       	<div><a href="../pages/archive" {% if template == 'page.archive' %}class="active" {% endif %} >Archive</a></div>
      	</div>


	    {% if template == 'product'%}
        <div id="cart"{% if template == 'cart' %}class="active" {% endif %} class="c"> <a href="/cart">Cart<span class="cart-total">

        {%- if cart.item_count == 0 -%}
      	0
        {%- else -%}

        {{- cart.item_count -}}

        {%- endif -%}

      	</span></a></div>



        {% endif %}

              {% if template == 'index'%}
        <div style="opacity:0; pointer-events:none;"id="cart"{% if template == 'cart' %}class="active" {% endif %} class="c"> <a href="/cart">Cart<span class="cart-total">

        {%- if cart.item_count == 0 -%}
      	0
        {%- else -%}

        {{- cart.item_count -}}

        {%- endif -%}

      	</span></a></div>



        {% endif %}



          {% if template == 'collection'%}

        <div id="cart"{% if template == 'cart' %}class="active" {% endif %} class="c"> <a href="/cart">Cart<span class="cart-total">

        {%- if cart.item_count == 0 -%}
      	0
        {%- else -%}

        {{- cart.item_count -}}

        {%- endif -%}

      	</span></a></div>
            {% endif %}

          {% if template == 'cart'%}

        <div id="cart"{% if template == 'cart' %}class="active" {% endif %} class="c"> <a href="/cart">Cart<span class="cart-total">

        {%- if cart.item_count == 0 -%}
      	0
        {%- else -%}

        {{- cart.item_count -}}

        {%- endif -%}

      	</span></a></div>



        {% endif %}


  </header>
  {{ content_for_layout }}
  <footer>
    <img src="{{ 'logo.png' | asset_url }}">
    <div class="credits">All rights reserved. © Vanessa Dorrei, 2023</div>
  </footer>
  {%- if template contains 'product' -%}
  {{ 'global-product.js' | asset_url | script_tag }}
{%- endif -%}
{%- if template == 'product' -%}
	{% render 'ajaxify-cart' %}
{%- endif -%}{% render 'mws_apo_init' %}

</body>
  <script>
function updatePrice(){
var prices = document.querySelectorAll(".price-item");


if (!prices)return;

for (var each of prices){
each.innerText = each.innerText.replace(',00', ',00');
}
}

 window.onload = function() {
setTimeout(updatePrice, 50);
            }

</script>
</html>
